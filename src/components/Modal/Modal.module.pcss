.overlay-panel {
    align-items: center;
    background-color: rgb(0 0 0 / 40%);
    display: flex;
    inset: 0;
    justify-content: center;
    position: fixed;
    z-index: 1;
}

.modal {
    background-color: #fff;
    border-radius: 12px;
    box-sizing: border-box;
    display: flex;
    height: 257px;
    max-width: 310px;
    padding: 40px 30px;
    width: 100%;
}
