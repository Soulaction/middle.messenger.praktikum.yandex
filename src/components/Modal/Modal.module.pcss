.overlay-panel {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgba(0,0,0, .4);
}

.modal {
    display: flex;
    padding: 40px 30px;
    box-sizing: border-box;
    max-width: 310px;
    width: 100%;
    height: 257px;
    background-color: #fff;
    border-radius: 12px;
}
