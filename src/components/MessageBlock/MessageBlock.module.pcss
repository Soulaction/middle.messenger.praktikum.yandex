.chat {
    display: flex;
    flex-direction: column;
    margin: 10px 20px 11px;
    width: calc(100% - 40px);
    height: calc(100% - 22px);
}

.chat-header {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
}

.chat-img {
    width: 34px;
    height: 34px;
}

.icon-menu {
    margin-left: auto;
}

.chat-name {
    margin-left: 10px;
    font-size: 13px;
    line-height: 13px;
    color: #1e1e1e;
}

.correspondence {
    display: flex;
    justify-content: flex-end;
    flex-direction: column;
    height: 100%;
    width: 100%;
    border-top: 1px solid #eaeaea;
    border-bottom: 1px solid #eaeaea;
}

.no-message {
    display: flex;
    height: 100%;
    width: 100%;
}

.no-message-title {
    margin: auto;
    font-size: 12px;
    font-weight: 500;
    line-height: 12px;
}

.send-msg-input-block {
    display: flex;
    margin-top: 11px;
    align-items: center;
    width: 100%;
}

.error-msg {
    margin-left: 60px;
}

.send-msg-input {
    display: block;
    margin: 0 10px;
    padding: 10px 20px;
    box-sizing: border-box;
    border-radius: 30px;
    width: 100%;
    background-color: #efefef;
    color: black;
    border: none;
    outline: none;
}

.send-msg-input::placeholder {
    color: var(--grey-color);
}

.send-msg-submit {
    transform: rotate(180deg);
}
